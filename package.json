{
  "name": "miwa-lit-sample",
  "version": "0.0.6",
  "license": "MIT",
  "main": "dist/miwa-lit-sample.es.js",
  "types": "types/MyElement.react.d.ts",
  "files": [
    "dist",
    "types",
    "src"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "lint": "run-p lint:*",
    "lint:js": "prettier --write --list-different ./src && eslint \"./src/**/*.{js,jsx,ts,tsx,vue}\" --fix --ignore-path .gitignore",
    "lint:package": "sort-package-json",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn lint:js",
    "package.json": "yarn lint:package"
  },
  "dependencies": {
    "@lit-labs/react": "^1.0.6",
    "@types/react": "^18.0.14",
    "lit": "^2.0.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.6",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "eslint": "^8.19.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit": "^1.6.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "sort-package-json": "^1.57.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.9"
  },
  "engines": {
    "node": "16.x",
    "npm": "please_use_yarn_instead"
  }
}
